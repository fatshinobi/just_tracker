.row
  .col-xs-12.col-sm-12.col-md-9
    - if @current_task
      = render 'short_view'
    - else
      = render 'short_form'

    %h1{id: 'taks-caption'} Today Tasks

    .panel.panel-default
      .panel-body
        #tasks-t-body
          %ul{class: 'items-list'}
            - @tasks.each do |task|
              = render partial: 'view', locals: { task: task }
  .col-xs-12.col-sm-12.col-md-3
    %h2 For date:
    .panel.panel-default
      .panel-body
        #task_datetimepicker

    %h2 Statistics:
    %ul{class: 'list-group'}
      - @statistics.each do |stat_item|
        %li{class: 'list-group-item'}
          = stat_item.category_name
          %span{class: 'badge'}
            = stat_item.during.to_s.truncate(8, omission: '')
